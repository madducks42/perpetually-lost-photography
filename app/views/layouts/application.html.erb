<!DOCTYPE html>
<html>
  <head>
    <title>PerpetuallyLost</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="has-navbar-fixed-top">
    <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="header-flex">
          <a class="navbar-item logo" href="/">
            <img src="/images/logo.png">
          </a>
          <a class="navbar-item logo-name" href="/">
            <img src="/images/logo-name.png">
          </a>
        </div>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link is-size-5">
              Galleries
            </a>

            <div class="navbar-dropdown">
              <a class="navbar-item is-size-5" href="/costa-rica">
                Costa Rica
              </a>
              <a class="navbar-item is-size-5" href="/national-parks">
                National Parks
              </a>
              <a class="navbar-item is-size-5" href="/northeast">
                Northeast
              </a>
            </div>
          </div>
          
          <a class="navbar-item is-size-5" href= "/blog">
            Blog
          </a>

          <a class="navbar-item is-size-5" href="https://perpetuallylost.shop" target="no_blank">
            Perpetually Lost Shop
          </a>

          <a class="navbar-item is-size-5" href="mailto:perpetuallylostphotography@gmail.com">
            Contact
          </a>

        </div>
      </div>
    </nav>
    
    <%= yield %>

    <footer class="has-text-centered footer">
      <h4 class="is-size-4">&copy; Perpetually Lost Photography</h4>
      <%- if current_user -%>
        <%= link_to 'Admin Logout', destroy_user_session_path, method: :delete, class: 'footer-item' %>
      <%- end -%>
    </footer>
    
    <%= javascript_include_tag 'application' %> 
  
  <%- if Rails.env.development? || Rails.env.test? -%> 
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  
  <%= yield :extra_footer %>

  </body>
</html>
